
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
  <meta name="author" content="Creative Tim">
  <title>EduConnect</title>
  <!-- Favicon -->
  <link rel="icon" href="/assets/img/brand/favicon.png" type="image/png">
  <!-- Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
  <!-- Icons -->
  <link rel="stylesheet" href="/assets/vendor/nucleo/css/nucleo.css" type="text/css">
  <link rel="stylesheet" href="/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css" type="text/css">
  <!-- Page plugins -->
  <!-- Argon CSS -->
  <link rel="stylesheet" href="/assets/css/argon.css?v=1.2.0" type="text/css">
  <link rel="stylesheet" href="assets/css/custom.css">
  <style>
    body{
      overflow-y: visible !important;
    }
  </style>
</head>

<body>
  <%- include('partials/navbar'); -%>
  <!-- Main content -->
  <div class="main-content" id="panel">
    <!-- Topnav -->
    <nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Search form -->
       <center>
          <marque class="mb-0 text-sm  font-weight-bold" style="color: white;"><i>"Push yourself because no one else is going to do it for you. One of these 5 a.m's is going to make you a legend"</i></marque>
        </center>
          <!-- Navbar links -->
          <ul class="navbar-nav align-items-center  ml-md-auto ">
            <li class="nav-item d-xl-none">
              <!-- Sidenav toggler -->
              <div class="pr-3 sidenav-toggler sidenav-toggler-dark" data-action="sidenav-pin" data-target="#sidenav-main">
                <div class="sidenav-toggler-inner">
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                </div>
              </div>
            </li>

          <ul class="navbar-nav align-items-center  ml-auto ml-md-0 ">
            <li class="nav-item dropdown">
              <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="media align-items-center">

                  <div class="media-body  ml-2  d-none d-lg-block">


                    <span class="mb-0 text-sm  font-weight-bold"><%= user.name %></span>
                  </div>
                </div>
              </a>
              <div class="dropdown-menu  dropdown-menu-right ">
                <div class="dropdown-header noti-title">
                  <h6 class="text-overflow m-0">Welcome!</h6>
                </div>
                <a href="/user/profile/<%- user._id %>" class="dropdown-item">
                  <i class="ni ni-single-02"></i>
                  <span>My profile</span>
                </a>
                <a href="/users/settings" class="dropdown-item">
                  <i class="ni ni-settings-gear-65"></i>
                  <span>Settings</span>
                </a>

                <a href="#" class="dropdown-item">
                  <i class="ni ni-support-16"></i>
                  <span>Support</span>
                </a>
                <div class="dropdown-divider"></div>
                <a href="/logout" class="dropdown-item">
                  <i class="ni ni-user-run"></i>
                  <span>Logout</span>
                </a>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Header -->
    <div class="header pb-12">
      <div class="container-fluid">
        <br>
        <div class="row">
            <% for (let i = posts.length -1 ; i>=0 ; i--){ %>
                <div class= "col-md-4">
                <div class=" card" style="width: 100%;" >
                 
                  <div class="card-body"   style="width: 100%;" >
                    <h1 class="card-title"><%- posts[i].title %></h1>
                    <p style="margin-bottom: 1px;  margin-top: 10px; font-size: 21px;">Books</p>
                    <% for (let j = 0 ; j< posts[i].books.length ; j++){ %>
                    <span style="font-family: 'Courier New', Courier, monospace; font-size: 17px;" class="card-text"><%- posts[i].books[j] %> </span>
                    <% } %>
                    <br>
                    <p style="margin-bottom: 1px; margin-top: 10px; font-size: 21px;">Blogs</p>
                    <% for (let j = 0 ; j< posts[i].blogs.length ; j++){ %>
                      <a href="<%- posts[i].blogs[j]%>" class="btn btn-outline-dark btn-block"><%- posts[i].blognames[j]%></a>
                    <% } %>
                    <br>
                    <p style="margin-bottom: 1px; margin-top: 10px; font-size: 21px;">Videos</p>
                    <% for (let j = 0 ; j< posts[i].videos.length ; j++){ %>
                      <a href="<%- posts[i].videos[j]%>" class="btn btn-outline-info btn-block"><%- posts[i].videonames[j]%></a>
                    <% } %>
                    
                    <hr>
                    <p style="margin-bottom: 1px;">By <a href="/users/profile/<%- posts[i].userid %>"><%- posts[i].name %></a></p>
                  </div>
                  
                </div>
            </div>
                <% } %>

        </div>
    </div>
    </div>

      <!-- Footer -->
      <%- include('partials/footer'); -%>
    </div>
  <!-- Argon Scripts -->
  <!-- Core -->
  <script src="/assets/vendor/jquery/jquery.min.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <script src="/assets/vendor/js-cookie/js.cookie.js"></script>
  <script src="/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
  <!-- Optional JS -->
  <script src="/assets/vendor/nouislider/distribute/nouislider.min.js"></script>
  <script src="/assets/js/landing.js"></script>
  <!-- Argon JS -->
  <script src="/assets/js/argon.min.js?v=1.2.0"></script>
</body>

</html>
